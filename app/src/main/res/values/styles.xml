<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>



    <style name="profile_text_sttyle">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="nick_name_style">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.EditText" parent="Profile">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Profile"></style>

    <style name="Profile.View">
        <item name="android:background">?attr/colorDivider</item>
    </style>

</resources>